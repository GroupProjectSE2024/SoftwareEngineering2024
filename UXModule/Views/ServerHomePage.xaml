<Page x:Class="UXModule.Views.ServerHomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ViewModel.DashboardViewModel;assembly=ViewModel"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf" xmlns:viewmodels="clr-namespace:FileCloner.ViewModels;assembly=FileCloner" d:DataContext="{d:DesignInstance Type=local:MainPageViewModel}"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ServerHomePage">

    <Page.Resources>
        <Style x:Key="TextButton" TargetType="{x:Type Button}">

            <Setter Property="Background" Value="#190019" />
            <Setter Property="Foreground" Value="#ffffff" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Padding" Value="50 10" />
            <Setter Property="Margin" Value="0 10" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ButtonBase}">
                        <Border x:Name="border"
                                CornerRadius="10"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="True">
                            <TextBlock Text="{TemplateBinding Content}"
                                       Focusable="False"
                                       FontFamily="{TemplateBinding FontFamily}"
                                       HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                       Margin="{TemplateBinding Padding}"
                                       SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                       VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Green" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#bdbdbd" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <Grid Background="#190019">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>


        <!-- Header with Time and User Info -->

        <Border Grid.Row="0" Background="#FFFFFF" Margin="0,10,0,0" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Ellipse Width="32" Height="32" Margin="0,0,10,0">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="{Binding ProfilePicUrl}"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock Text="{Binding UserName}"
                       Margin="0,0,0,0"
                       VerticalAlignment="Center"
                       FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" MinWidth="250"/>
                <ColumnDefinition Width="*" MinWidth="400"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Fixed Width -->
            <Grid Grid.Column="0" Margin="0,0,15,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Participants Header -->
                <TextBlock Grid.Row="0" Text="Participants" Foreground="#ffffff"
                         FontSize="18" FontWeight="SemiBold"
                         Margin="0,0,0,10"/>

                <!-- Participants List with ScrollViewer -->
                <Border Grid.Row="1" BorderThickness="1" BorderBrush="#E0E0E0"
                        CornerRadius="4" Background="White">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                HorizontalScrollBarVisibility="Auto"
                                MaxHeight="300">
                        <!-- Set max height for scrolling -->
                        <ItemsControl ItemsSource="{Binding UserDetailsList}"
                                    Margin="5">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="8" Margin="0,2"
                                            Background="#F8F9FA" CornerRadius="4">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Ellipse Width="32" Height="32" Margin="0,0,10,0">
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="{Binding ProfilePictureUrl}"/>
                                                </Ellipse.Fill>
                                            </Ellipse>

                                            <TextBlock Grid.Column="1"
                                                     Text="{Binding UserName}"
                                                     VerticalAlignment="Center"
                                                     TextTrimming="CharacterEllipsis"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>

                <!-- Meeting Credentials -->
                <GroupBox Grid.Row="2" Header="Meeting Credentials" Foreground="#FFFFFF"
                         Margin="0,15,0,0" Padding="15" >
                    <StackPanel>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Server IP:" VerticalAlignment="Center" Foreground="#FFFFFF"/>
                            <TextBox Grid.Column="1" Text="{Binding ServerIP}"
                                   Margin="10,0,0,0" Padding="5" IsReadOnly="True"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Server Port:" VerticalAlignment="Center" Foreground="#FFFFFF"/>
                            <TextBox Grid.Column="1" Text="{Binding ServerPort}"
                                   Margin="10,0,0,0" Padding="5" IsReadOnly="True"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </Grid>

            <!-- Right Panel - Charts -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="20"/>
                    <!-- Spacing between charts -->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- First Chart -->
                <Border Grid.Row="0" BorderThickness="1" BorderBrush="#E0E0E0"
                        CornerRadius="4" Background="White">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Users Over Time"
                                 FontSize="16" FontWeight="SemiBold"
                                 Margin="15,10,0,0"/>

                        <lvc:CartesianChart
                            Grid.Row="1"
                            Series="{Binding SeriesCollection}"
                            DisableAnimations="True"
                            Hoverable="True"
                            DataTooltip="{Binding DataTooltip}"
                            Margin="15">
                            <lvc:CartesianChart.AxisX >
                                <lvc:Axis Title="Time" FontSize="12"  ShowLabels="False">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator Step="1"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis Title="Number of Users" FontSize="12" MinValue="0">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator Step="1"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                    </Grid>
                </Border>

                <!-- Second Chart -->
                <Border Grid.Row="2" BorderThickness="1" BorderBrush="#E0E0E0"
                        CornerRadius="4" Background="White">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Additional Chart"
                                 FontSize="16" FontWeight="SemiBold"
                                 Margin="15,10,0,0"/>

                        <!-- Add your second chart here -->
                        <lvc:CartesianChart
                            Grid.Row="1"
                            Series="{Binding SecondSeriesCollection}"
                            DisableAnimations="True"
                            Hoverable="True"
                            Margin="15">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Title="X Axis" FontSize="12">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator Step="1"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis Title="Y Axis" FontSize="12" MinValue="0">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator Step="1"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Footer with End Session Button -->
        <Border Grid.Row="2" Background="#FFFFFF" Padding="15">
            <Button Content="End Session"
                    HorizontalAlignment="Center"
                    Padding="20,10"
                    Click="Button_Click"
                    BorderThickness="0"
                    Style="{StaticResource TextButton}" Margin="0,10,0,-5" Width="194" >
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Border>
    </Grid>
</Page> 
